      "source": [
        "# Bisection Method Example\n",
        "# Equation: f(x) = x^3 - x - 2\n",
        "\n",
        "def f(x):\n",
        "    return x**3 - x - 2\n",
        "\n",
        "def bisection(a, b, tol):\n",
        "    if f(a) * f(b) >= 0:\n",
        "        print(\"Bisection method fails.\")\n",
        "        return None\n",
        "    while (b - a) / 2.0 > tol:\n",
        "        midpoint = (a + b) / 2.0\n",
        "        if f(midpoint) == 0:\n",
        "            return midpoint\n",
        "        elif f(a) * f(midpoint) < 0:\n",
        "            b = midpoint\n",
        "        else:\n",
        "            a = midpoint\n",
        "    return (a + b) / 2.0\n",
        "\n",
        "root = bisection(1, 2, 0.0001)\n",
        "print(\"Approximate root:\", root)\n"
      ]
    }
  ]
